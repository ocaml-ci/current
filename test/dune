(executable
 (name gen_dune_rules)
 (modules gen_dune_rules)
 (libraries fmt))

(include dune.inc)

(rule
 (targets dune.gen)
 (deps
  (source_tree .))
 (action
  (with-stdout-to
   %{targets}
   (run ./gen_dune_rules.exe))))

(rule
 (alias runtest)
 (package current)
 (action
  (diff dune.inc dune.gen)))
